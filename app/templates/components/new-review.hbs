{{!--yield--}}
{{#if addReview}}
<h2>Add a New a Review</h2>
<div>
  <form>
    <div class="form-group">
      <label>Author</label>
      {{input type="author" value="author"}}
    </div>
    <div class="form-group">
      <label for="rating">Rating</label>
      {{input id="rating" value="rating"}}
    </div>
    <div class="form-group">
      <label for="content">Content</label>
      {{input id="content" value="content"}}
    </div>
    <button {{action 'saveReview'}}>Save</button>
  </form>
</div>
{{else}}
<button {{action 'reviewForm'}}>New Review</button>
{{/if}}
